{
  "name": "@firebase-bridge/auth-context",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "description": "High-fidelity test utilities for Firebase Cloud Functions auth contexts. Register mock identities (Auth + App Check) and inject them into v1/v2 https.onCall and https.onRequest handlers for deterministic unit testsâ€”no emulator required.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "nx build firestore-admin",
    "build:esm": "nx run auth-context:build-esm",
    "build:cjs": "nx run auth-context:build-cjs",
    "prepublishOnly": "nx build auth-context && node ../../tools/prepare-publish.mjs",
    "publish:pkg": "npm publish ./dist --access public",
    "pack:dry": "npm pack ./dist --dry-run"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "firebase-functions": "^6.4.0"
  },
  "peerDependencies": {
    "google-gax": ">=4.3.3 <6"
  },
  "peerDependenciesMeta": {
    "@google-cloud/firestore": {
      "optional": false
    },
    "google-gax": {
      "optional": false
    }
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "google-gax": "^5.0.0",
    "typescript": ">=5.5 <6",
    "@types/node": "^20.0.0"
  },
  "nx": {
    "targets": {
      "build-esm": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsc -p build.esm.tsconfig.json --pretty false",
          "cwd": "{projectRoot}"
        },
        "outputs": [
          "{projectRoot}/dist/esm"
        ]
      },
      "build-cjs": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsc -p build.cjs.tsconfig.json --pretty false",
          "cwd": "{projectRoot}"
        },
        "outputs": [
          "{projectRoot}/dist/cjs"
        ]
      },
      "post-build": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "{projectRoot}",
          "command": "node .scripts/post-build.mjs"
        },
        "outputs": [
          "{projectRoot}/dist/package.json"
        ]
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "nx run auth-context:clean",
            "nx run auth-context:build-esm",
            "nx run auth-context:build-cjs",
            "nx run auth-context:post-build"
          ],
          "parallel": false
        },
        "outputs": [
          "{projectRoot}/dist/esm",
          "{projectRoot}/dist/cjs"
        ]
      }
    }
  }
}