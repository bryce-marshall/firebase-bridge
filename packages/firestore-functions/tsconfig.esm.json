{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    // ESM config (pairs with NodeNext resolution to avoid TS5110)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Make the output unmistakably ESM-looking (optional but helpful)
    "importHelpers": false,
    // Declarations for the ESM build
    "declaration": true,
    "declarationMap": false,
    // Build info + incremental
    "incremental": false,
    "composite": false,
    "noEmitOnError": false,
    "tsBuildInfoFile": "./.tsbuildinfo-esm",
    
    // CRITICAL: wipe out base "paths" so we don't pull in other package's src
    "paths": {
      "@firebase-bridge/firestore-admin": [
        "packages/firestore-admin/dist/esm/index.d.ts"
      ],
      "@firebase-bridge/firestore-admin/*": [
        "packages/firestore-admin/dist/esm/*"
      ]
    }
  }
}