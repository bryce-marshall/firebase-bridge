{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "importHelpers": false,
    "declaration": true,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "noEmitOnError": false,
    "tsBuildInfoFile": "./.tsbuildinfo-esm",
    "paths": {
      "@firebase-bridge/firestore-admin": [
        "packages/firestore-admin/dist/esm/index.d.ts"
      ],
      "@firebase-bridge/firestore-admin/*": [
        "packages/firestore-admin/dist/esm/*"
      ]
    }
  }
}