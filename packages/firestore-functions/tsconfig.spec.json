{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/jest",
    "types": [
      "jest",
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext"
  },
  "include": [
    "jest.config.js",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/unit-tests/**/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}