{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo-cjs",
    // CRITICAL: wipe out base "paths" so we don't pull in other package's src
    "paths": {
      "@firebase-bridge/firestore-admin": [
        "packages/firestore-admin/dist/esm/index.d.ts"
      ],
      "@firebase-bridge/firestore-admin/*": [
        "packages/firestore-admin/dist/esm/*"
      ]
    }
  }
}